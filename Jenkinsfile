pipeline{
    agent any
    stages {
        stage("build"){
            steps{
                // Buraya npm install tarzı komutlar
                echo "Uygulama oluşturuluyor"
            }
        }
        stage("test"){
            steps{
                // test scriptleri
                echo "Uygulama test ediliyor"
            }
        }
        stage("deploy"){
            steps{
                echo "Uygulama yükleniyor"
            }
        }
    }
}